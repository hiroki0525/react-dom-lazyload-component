{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ES2017",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "ES2020",
      "DOM"
    ]
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": [
    "node_modules"
  ]
}